{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": [
    "**/*.ts"
  ]
}